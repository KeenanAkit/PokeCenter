<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.keenan.pokecentermaster.IvActivity"
    tools:showIn="@layout/app_bar_iv">

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon_dropdown"
        android:layout_centerHorizontal="true"></Spinner>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/cpValueText"
        android:inputType="number"
        android:layout_below="@id/pokemon_dropdown"
        android:layout_centerHorizontal="true"
        android:hint="Enter CP" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/hpValueText"
        android:inputType="number"
        android:layout_below="@id/cpValueText"
        android:layout_centerHorizontal="true"
        android:hint="Enter HP" />
    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/dustValueSpinner"
        android:layout_below="@id/hpValueText"
        android:layout_centerHorizontal="true"
        android:hint="Enter Dust " />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/calcButton"
        android:layout_below="@id/dustValueSpinner"
        android:onClick="calcClick"
        android:text="Calculate"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testText"/>
</RelativeLayout>
